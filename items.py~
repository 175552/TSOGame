class Items:
	def __str__(self):
		return self.name
class Gold(Items):
	def __str__(self):
		self.name = "Gold"
		self.description = "A valuable resource to be used in the shop"
		self.amount = 5

	def check_amount(self):
		return self.amount

class Weapon: 
	def __str__(self):
		return self.name
class Fist(Weapon):
	def __init__(self):
		self.name = "Fist"
		self.description = "You can always trust your fists"
		self.damage = 5
class Sword(Weapon):
	def __init__(self):
		self.name = "Sword"
		self.description = "A shiny sword honed to a point"
		self.damage = 10

